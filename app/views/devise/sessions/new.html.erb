<div class="login-overlay">
	<div class="logo">
		Agenda <br> <span class="smaller">Central</span>
	</div>
	<div class="form-container shadow">
		<div class="icon">
				<i class="material-icons">account_circle</i>
			<div class="header">
					Login
			</div>
		</div>
		<div class="inputs">




      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="input-field">
          <%= f.email_field :email, autofocus: true, class: "validate", required: {required: ""}, aria: {required: "true"} %>
          <%= f.label :email %>
        </div>
        <div class="input-field">
          <%= f.password_field :password, autocomplete: "off", class: "validate", required: {required: ""}, aria: {required: "true"} %>
          <%= f.label :senha %>
        </div>
        <div class="actions">
          <%= button_tag "Login", class:"btn waves-effect waves-light" %>
        </div>
      <% end %>

		</div>
	</div>
</div>
<script type="text/javascript">
	$(document).on("ready", function(){
		Materialize.toast('<%= content_tag(:div, flash[:error], id: 'flash_error') if flash[:error] %>', 4000, 'yellow darken-2');
		Materialize.toast('<%= content_tag(:div, flash[:notice], id: 'flash_notice') if flash[:notice] %>', 4000, 'orange darken-2');
		Materialize.toast('<%= content_tag(:div, flash[:alert], id: 'flash_alert') if flash[:alert] %>', 4000, 'red darken-2');
	});
</script>
