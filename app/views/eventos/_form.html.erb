<%= form_for evento, remote: true, class: "col s12" do |f| %>
  <div class="modal-content">
    <div class="card">
      <div class="row card-content m-b-0 p-b-0 p-l-30 p-r-30">
        <span class="card-title">Leilão</span>
        <div class="row">
          <div class="input-field col s12 m4">
            <%= f.text_field :nome %>
            <%= f.label :nome, class: "active"%>
          </div>
          <div class="input-field col s12 m4">
            <%= f.datetime_field :data, type: "datetime-local"  %>
            <%= f.label :data, class: "active" %>
          </div>
          <div class="input-field col s12 m4">
            <%= f.select :canal, Evento.canais.map { |k, v| [k.humanize, k]} %>
            <%= f.label :canal %>
          </div>

          <div class="input-field col s12 m4">
            <%= f.select :estado, @estados.collect {|estado| [(estado.sigla_nome), estado.id]} %>
            <%= f.label "estado" %>
          </div>
          <div class="input-field col s12 m4">
            <%= f.select :cidade_id, @cidades.collect {|cidade| [cidade.nome, cidade.id]} %>
            <%= f.label :cidade_id %>
          </div>
          <div class="input-field col s12 m4">
            <%= f.check_box :aprovado %>
            <%= f.label :aprovado %>
          </div>
        </div>
      </div>
      <div class="card-action">
        <%= button_tag "Salvar", class:"btn waves-effect waves-light" %>

        <% if !evento.new_record? %>
          <%= link_to "Excluir", evento_path(evento), method: 'delete', class: 'btn red darken-3 waves-effect waves-light', remote:true,
                data: { confirm: t('.confirm', :default => t("helpers.links.confirm", default: 'Confirmar a exclusão?')) } %>
        <% end %>
      </div>
    </div>

  </div>


<% end %>
